{
  "name": "fronix-se",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "nodemon index.js",
    "tsServer": "ts-node-dev --respawn --transpileOnly ./index.ts",
    "client": "npm run start --prefix client",
    "dev": "concurrently --kill-others-on-fail \"npm run tsServer\" \"npm run client\"",
    "start": "node index.js",
    "tsc": "tsc",
    "prod": "tsc && node ./build/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fronix/fronix-se.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Fronix/fronix-se/issues"
  },
  "homepage": "https://github.com/Fronix/fronix-se#readme",
  "eslintConfig": {
    "extends": "airbnb-base",
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "warn",
      "no-restricted-imports": [
        "error",
        {
          "paths": [
            {
              "name": "styled-components",
              "message": "Please import from styled-components/macro."
            }
          ],
          "patterns": [
            "!styled-components/macro"
          ]
        }
      ],
      "no-var": "error"
    }
  },
  "dependencies": {
    "@types/express": "^4.17.2",
    "@types/mongoose": "^5.5.30",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mongoose": "^5.7.9",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "nodemon": "^1.19.4"
  }
}
